<!DOCTYPE html>
<html lang="en">

<%- include('./head') %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <%- include('./topbar') %>
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <% if (typeof detail_asset !== 'undefined' && detail_asset) { %>
                            <a href="./" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">BACK</a>
                        <% } else { %>
                            <h1 class="h3 mb-0 text-gray-800">Dashboard (Access <%= user.limit_asset.type %>)</h1>
                        <% } %>
                    </div>
                    <% if (typeof data_asset !== 'undefined' && data_asset) { %>
                        <!-- Content Row -->
                        <div class="row">

                            <!-- Earnings (Monthly) Card Example -->
                            <div class="col-xl-3 col-md-6 mb-4">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                    Article Limit</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800"><%= user.limit_asset.article %></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Earnings (Monthly) Card Example -->
                            <div class="col-xl-3 col-md-6 mb-4">
                                <div class="card border-left-success shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                    Video Limit</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800"><%= user.limit_asset.video %></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Earnings (Monthly) Card Example -->
                            <div class="col-xl-3 col-md-6 mb-4">
                                <div class="card border-left-info shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Article Access
                                                </div>
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col-auto">
                                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800"><%= access_limit_asset.article %></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Pending Requests Card Example -->
                            <div class="col-xl-3 col-md-6 mb-4">
                                <div class="card border-left-warning shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                    Video Access</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800"><%= access_limit_asset.video %></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <!-- Content Row -->
                    <div class="row">
                        <% if (typeof data_asset !== 'undefined' && data_asset) { %>
                            <% var no = 1; %>
                            <% data_asset.forEach(data => { %>
                                <div class="col-lg-6 mb-4">
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">#<%= no %><%= data.is_pick ? ` (Selected)` : '' %></h6>
                                        </div>
                                        <div class="card-body">
                                            <h3 class="text-center"><b><%= data.title %></b></h3>
                                            <div class="text-center">
                                                <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 25rem;"
                                                    src="<%= data.thumbnail %>" alt="...">
                                            </div>
                                            <a href="./?detail=<%= data.id %>">DETAIL>>></a>
                                        </div>
                                    </div>
                                </div>
                            <% no++; }) %>
                        <% } else { %>
                            <div class="col-lg-12 mb-4">
                                <div class="card shadow mb-4">
                                    <div class="card-body">
                                        <p><h3 class="text-center"><b><%= detail_asset.title %></b></h3></p><hr/>
                                        <div class="text-center">
                                            <% if (detail_asset.is_video) { %>
                                                <video style="width: 75vh; height: 350px;" controls>
                                                    <source src="<%= detail_asset.content %>" type="video/mp4">
                                                    Your browser does not support the video tag.
                                                </video>
                                            <% } else { %>
                                                <%- detail_asset.content %>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Astronacci Test</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('./script') %>

</body>

</html>